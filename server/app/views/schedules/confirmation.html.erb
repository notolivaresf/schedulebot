<div class="confirmation-container">
  <div class="success-icon">âœ“</div>
  <h1>Success!</h1>
  <p class="message">Your selection has been sent.</p>

  <div class="selected-slots">
    <h2>Selected Time Slots:</h2>
    <div class="slots-list">
      <% @schedule.selected_slots.each do |slot| %>
        <div class="slot-card">
          <div class="slot-date"><%= format_slot_date(slot["date"]) %></div>
          <div class="slot-time"><%= format_slot_time_range(slot["startTime"], slot["endTime"]) %></div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .confirmation-container {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    text-align: center;
  }

  .success-icon {
    font-size: 4rem;
    color: #28a745;
    margin-bottom: 1rem;
  }

  h1 {
    color: #333;
    margin-bottom: 0.5rem;
  }

  .message {
    color: #666;
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  .selected-slots {
    text-align: left;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid #e9ecef;
  }

  .selected-slots h2 {
    font-size: 1.25rem;
    color: #333;
    margin-bottom: 1rem;
  }

  .slots-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .slot-card {
    background-color: #e7f3ff;
    border: 2px solid #007bff;
    border-radius: 8px;
    padding: 1rem;
  }

  .slot-date {
    font-weight: 600;
    color: #333;
  }

  .slot-time {
    color: #666;
    font-size: 0.875rem;
  }
</style>
